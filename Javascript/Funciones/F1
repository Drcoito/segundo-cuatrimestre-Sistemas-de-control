<script type="text/javascript">
function square(x) { 
return x*x;
 }
function triangle_values () {
    var a = Number(prompt("indique base"))
    var b = Number(prompt("indique altura"))
    
   
    var hypotenuse  = Math.sqrt(square(a) + square(b));
    var perimeter = a + b + hypotenuse
    var surface = (a * b)/2

    document.write('<br/>la hipotenusa es ' + hypotenuse)
    document.write('<br/>el perimetro es ' + perimeter)
    document.write('<br/>la superficie es ' + surface)
    document.write('<p><a href="./funciones.html">Volver</a></p>')

   }
   triangle_values ();

function isTriangle (){

    var a = Number(prompt("indique primer lado"))
    var b = Number(prompt("indique el segundo lado"))
    var c = Number(prompt("indique el tercer lado"))

    if (((a + b) > c) && ((a + c)> b) && ((b + c)> a)) {
        return true
    } else {
        return false
    }( "The end...0o0");
}
isTriangle ()
